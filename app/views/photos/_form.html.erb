<%= simple_form_for @photo, :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	 <%= f.input :path, as: :file %>
  	 <%= f.association :album %>
    <%= f.input :title %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
