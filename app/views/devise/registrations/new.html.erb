<% content_for :for_head do %>
  <%= stylesheet_link_tag "style-clean" %>
<% end %>


<div class="container signup">
  <h2>Sign up</h2>
  <div class="col-md-6">
    

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control' %></div>

        <div><%= f.label :profile_name %><br />
        <%= f.text_field :profile_name, class: 'form-control' %></div>

        <div><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>

        <button type="submit" class="btn btn-primary">Sign up</button>
      <% end %>

      
  </div>

  <div class="col-md-6 signupFacebook">

    <a class="btn-auth btn-facebook large" href="#" onclick="login('http://www.flampic.com/photos/flow');">
    Sign up with <b>Facebook</b>
  </a>
  <h5>+50 Reputation with Facebook</h5>
  <p>Sing up via Facebook and earn <strong>+50 reputation</strong> for your account.</p>

  </div>
</div>